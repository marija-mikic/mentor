{% extends 'main/index.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="bg-light mt-v p-4">
                <h1>Register</h1>

                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.name) }}
                {{ form_row(registrationForm.surname) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.adress) }}
                {{ form_row(registrationForm.house_number) }}
                {{ form_row(registrationForm.postcode) }}
                {{ form_row(registrationForm.city) }}
                {{ form_row(registrationForm.country) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                    <button type="submit" class="btn">Register</button>
                {{ form_end(registrationForm) }}

            </div>
        </div>
    </div>

{% endblock %}
